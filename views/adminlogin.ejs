<%- include('./partials/header') %>

<div id="login">
  <h3 class="text-center col-12 text-white pt-5">Login form</h3>
  <div class="container">
      <div id="login-row" class="row justify-content-center align-items-center">
          <div id="login-column" class="col-md-6">
              <div id="login-box" class="col-md-12">
                  <form id="login-form" class="form" action="/admin/admin" method="POST">
                      <h3 class="text-center text-info">Admin Login</h3>
                      

                      <div class="alert alert-warning alert-dismissible fade show p-0 border-0 " role="alert">
                        <p><%= message %></p>
                      </div>
                      <div class="form-group">
                          
                          <label for="email" class="text-info">email:</label><br>
                          <input type="email" name="email" id="email" class="form-control" required>
                      </div>
                      <div class="form-group">
                          <label for="password" class="text-info">Password:</label><br>
                          <input type="password" name="password" id="password" class="form-control" required>
                      </div>
                      <div class="form-group">
                          
                          <input type="submit" name="submit" class="btn btn-info btn-md" value="Login">
                      </div>
                      <div id="register-link" class="text-right">
                          <a href="/login" class="text-info">User login</a>
                      </div>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>

<%- include('./partials/footer') %>